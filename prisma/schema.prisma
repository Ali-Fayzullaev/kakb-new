// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Модель администратора
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Модель новости
model News {
  id          String   @id @default(cuid())
  title       String
  titleKz     String   // Заголовок на казахском
  content     String   // Контент на русском
  contentKz   String   // Контент на казахском
  excerpt     String?  // Краткое описание на русском
  excerptKz   String?  // Краткое описание на казахском
  image       String?  // URL изображения
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Модель блога
model Blog {
  id          String   @id @default(cuid())
  title       String
  titleKz     String   // Заголовок на казахском
  content     String   // Контент на русском
  contentKz   String   // Контент на казахском
  excerpt     String?  // Краткое описание на русском
  excerptKz   String?  // Краткое описание на казахском
  image       String?  // URL изображения
  author      String   // Автор статьи
  category    String?  // Категория
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
